<tr>
  <td><%= link_to object.id, object_path(object) %></td>
  <%= selected_columns(@klass).collect {|c| "<td>#{render_column(c, object)}</td>" }.join("\n") %>
  <td><%= object.created_at.to_formatted_s(:short) %></td>
  <td><%= object.updated_at.to_formatted_s(:short) %></td>

  <td>
    [<%= link_to 'edit', edit_path(object) %>]
    [<%= link_to 'destroy', object_path(object), :confirm => "Are you sure you want to delete this entry?", :method => :delete %>]
  </td>
</tr>